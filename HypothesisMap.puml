!function $formatList($text)
  !if ($text == "")
    !return ""
  !endif
  
  !$result = ""
  !$remaining = $text
  !$counter = 1
  !$pos = %strpos($remaining, ";")
  
  !while ($pos >= 0)
    !$item = %substr($remaining, 0, $pos)
    !if (%strlen($item) > 0)
      !$result = $result + $counter + ". " + $item + "\n"
      !$counter = $counter + 1
    !endif
    !$remaining = %substr($remaining, $pos+1)
    !$pos = %strpos($remaining, ";")
  !endwhile
  
  !if (%strlen($remaining) > 0)
    !$result = $result + $counter + ". " + $remaining
  !endif
  !return $result
!endfunction

' –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —Ü–≤–µ—Ç–Ω–æ–≥–æ –±–ª–æ–∫–∞ –ø–æ –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç—É
!function $priorityBlock($value)
  !if ($value == 3)
    !return "<back:#f24726><color:black> " + $value + " </color></back>"
  !elseif ($value == 2)
    !return "<back:#fbe32d><color:black> " + $value + " </color></back>"
  !elseif ($value == 1)
    !return "<back:#8fd14f><color:black> " + $value + " </color></back>"
  !else
    !return ""
  !endif
!endfunction

' –£–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —Å–≤—è–∑–µ–π —Å –º–∞—Å—Å–∏–≤–æ–º —ç–ª–µ–º–µ–Ω—Ç–æ–≤
!unquoted procedure $connectToTargets($from, $targets, $influence)
  !$items = $targets + ";"
  !$pos = %strpos($items, ";")
  !while ($pos > 0)
    !$target = %substr($items, 0, $pos)
    !if (%strlen($target) > 0)
      $target -[hidden]-> $from
      !if ($influence == 3)
        HighRel($from, $target)
      !elseif ($influence == 2)
        MediumRel($from, $target)
      !elseif ($influence == 1)
        LowRel($from, $target)
      !elseif ($influence > 0)
        $from --> $target
      !endif
    !endif
    !$items = %substr($items, $pos + 1)
    !$pos = %strpos($items, ";")
  !endwhile
!endprocedure

!function $addSection($content, $title, $text)
  !if ($text != "")
    !return $content + "\n**" + $title + ":**\n" + $formatList($text)
  !endif
  !return $content
!endfunction

!function $addSimpleSection($content, $title, $text)
  !if ($text != "")
    !return $content + "\n**" + $title + ":** " + $text
  !endif
  !return $content
!endfunction

