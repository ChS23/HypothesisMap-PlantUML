!unquoted procedure Subject($alias, $targets, $description, $pains, $desires, $influence = 0)
  !$content = $description
  !$content = $addSimpleSection($content, "–ë–æ–ª–∏", $pains)
  !$content = $addSimpleSection($content, "–ñ–µ–ª–∞–Ω–∏—è", $desires)
  
  !if ($influence == 3)
    rectangle "<back:#f24726><color:black> $influence </color></back>\n$content" as $alias $SUBJECT_COLOR
  !elseif ($influence == 2)
    rectangle "<back:#fbe32d><color:black> $influence </color></back>\n$content" as $alias $SUBJECT_COLOR
  !elseif ($influence == 1)
    rectangle "<back:#8fd14f><color:black> $influence </color></back>\n$content" as $alias $SUBJECT_COLOR
  !else
    rectangle "$content" as $alias $SUBJECT_COLOR
  !endif
  
  $connectToTargets($alias, $targets, $influence)
!endprocedure

